{
  "compileOnSave": true,
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "/"
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules", "tmp", "dist"],
  "include": ["**/*.ts"]
}
